<div class="pb-4">
  <%= link_to '<- Back', customers_path, class: 'link-primary' %>
</div>

<div class="flex justify-between pb-2">
  <div class="page-heading">Customer â„–<%= @customer.id %></div>

  <div class="flex items-center gap-x-2">
    <%= link_to 'Edit',
                edit_customer_path(@customer.id),
                class: 'btn-primary' %>
    <%= button_to "Remove",
                  customer_path(@customer.id),
                  class: 'btn-danger',
                  method: :delete,
                  form: {
                    data: { turbo_confirm: "Are you sure?" }
                  } %>
    <%= link_to 'New Payment Method',
                new_payment_method_path(customer_id: @customer.id),
                class: 'btn-primary' %>
    <%= link_to 'New Payment',
                new_payment_path(customer_id: @customer.id),
                class: 'btn-primary' %>
  </div>
</div>

<div class="flex flex-row gap-x-4">
  <%= render @customer %>

  <div class="card relative w-min p-4 overflow-x-auto">
    <div class="mb-4 font-semibold">Revolut Customer</div>
    <pre><%= JSON.pretty_generate @customer.revolut_customer %></pre>
  </div>
</div>
